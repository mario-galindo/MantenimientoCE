<controls:ChildWindow x:Class="ControlDeEstudio.Modales.ModalSubtema"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="600" Height="260" 
           Title="Subtema"
           DataContext="{Binding Path=CategoriaViewModel,Source={StaticResource ResourceKey=viewModelLocator}}">

    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Margin="9,37,5,28" Grid.RowSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180*"/>
                <ColumnDefinition Width="180*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
               
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="1" FontFamily="century gothic" Text="Descripcion:" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="80,0,0,0"></TextBlock>
            <TextBlock Grid.Row="3" FontFamily="century gothic" Text="Orden:" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="99,5,0,2"></TextBlock>
            <TextBlock Grid.Row="5" FontFamily="century gothic" Text="Estado:" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="99,5,0,2"></TextBlock>


            <TextBox Text="{Binding SubtemaDTO.Descripcion,Mode=TwoWay}" Grid.Row="1" FontSize="18" FontFamily="century gothic" Width="300" Height="30" Grid.Column="1" HorizontalAlignment="Left" BorderBrush="Blue" RenderTransformOrigin="0.5,0.5" Background="{x:Null}" BorderThickness="0,0,0,1" Margin="0,3,0,2" MaxLength="50"/>
            <TextBox Text="{Binding SubtemaDTO.Orden,Mode=TwoWay}" Grid.Row="3" FontSize="18" FontFamily="century gothic" Width="300" Height="30" Grid.Column="1" HorizontalAlignment="Left" BorderBrush="Blue" RenderTransformOrigin="0.5,0.5" Background="{x:Null}" BorderThickness="0,0,0,1" Margin="2,2,-20,3"/>
            <ComboBox ItemsSource="{Binding Estados,Mode=TwoWay}" SelectedItem="{Binding SubtemaDTO.Estado,Mode=TwoWay}" Grid.Row="5" Grid.Column="1" Style="{StaticResource ComboBoxStyle1}" Width="200" HorizontalAlignment="Left" Height="25" FontFamily="century gothic" Margin="7,2,0,3"/>

        </Grid>

        <Button FontFamily="century gothic" VerticalAlignment="Bottom" x:Name="CancelButton" Content="Cancel" Style="{StaticResource estiloboton}" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Cursor="Hand" Grid.Row="1"/>
        <Button FontFamily="century gothic" VerticalAlignment="Bottom" x:Name="GuardarButton" Content="Guardar" Style="{StaticResource estiloboton}" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,0,80,0" Cursor="Hand" Command="{Binding ComandoGuardarSubtema}" Grid.Row="1"/>
        <Button FontFamily="century gothic" VerticalAlignment="Bottom" Style="{StaticResource estiloboton}" x:Name="ActualizarButton" Content="Actualizar" Click="OKButton_Click" Command="{Binding ComandoEditarSubtema}" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,0,160,0"  Cursor="Hand" Grid.Row="1"/>
    </Grid>
</controls:ChildWindow>